using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Gc.Db
{
    public class PageDataResult
    {
        public PageDataResult()
        {
            PageIndex = 1;
            PageSize = 10;
            TotalCount = 0;
            Data = null;
        }

        /// <summary>
        /// 当前第几页
        /// </summary>
        public int PageIndex { get; set; }

        /// <summary>
        /// 每页条数
        /// </summary>
        public int PageSize { get; set; }

        /// <summary>
        /// 总记录结果数
        /// </summary>
        public int TotalCount { get; set; }

        /// <summary>
        /// 列表数据
        /// </summary>
        public object Data { get; set; }
    }

    public class PageDataResult<T>
    {
        public PageDataResult()
        {
            PageIndex = 1;
            PageSize = 10;
            TotalCount = 0;
            Data = default(T);
        }

        /// <summary>
        /// 当前第几页
        /// </summary>
        public int PageIndex { get; set; }

        /// <summary>
        /// 每页条数
        /// </summary>
        public int PageSize { get; set; }

        /// <summary>
        /// 总记录结果数
        /// </summary>
        public int TotalCount { get; set; }

        /// <summary>
        /// 列表数据
        /// </summary>
        public T Data { get; set; }
    }
}
